<div>

    {{#each movies}}
    <h2>
        {{title}}||<a href="/movies/{{id}}">See details</a>
    </h2>
    <form action="/movies/{{id}}/delete" method="POST">
        <button type="submit" class="btn btn-dark">Delete this movie</button>
    </form>
    {{/each}}
    <a href="/movies/new">Add new movies</a>


</div>